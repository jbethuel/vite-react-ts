{
  "name": "vite-react-ts",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "ENVIRONMENT=dev vite",
    "lint": "yarn prettier:check && yarn eslint:check",
    "eslint:check": "eslint ./src --max-warnings=0",
    "prettier:check": "prettier --check ./src",
    "build:dev": "tsc && ENVIRONMENT=dev vite build",
    "build:prod": "tsc && ENVIRONMENT=prod vite build",
    "preview:dev": "yarn build:dev & vite preview",
    "preview:prod": "yarn build:prod & vite preview",
    "test:run": "jest",
    "test:watch": "jest --watch",
    "storybook:run": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "e2e:run": "playwright test",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "path-parser": "^6.1.0",
    "query-string": "^7.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@playwright/test": "^1.29.1",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/builder-vite": "^0.2.6",
    "@storybook/react": "^6.5.15",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^3.0.0",
    "babel-loader": "^9.1.0",
    "eslint": "^8.31.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.8",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.0"
  }
}
